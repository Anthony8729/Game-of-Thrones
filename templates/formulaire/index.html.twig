{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Formulaire{% endblock %}

{% block body %}

      <h1>Formulaire</h1>

      {{ form_start(form) }}

      {{ form_row(form.login, {'attr': {'placeholder': "Login"}}) }}
      {{ form_row(form.email, {'attr': {'placeholder': "Email"}}) }}
      {{ form_row(form.motdepasse, {'attr': {'placeholder': "Mot de passe"}}) }}
      {{ form_row(form.repetezlemotdepasse, {'attr': {'placeholder': "Repetez le mot de passe"}}) }}

      <button type="submit" class="btn btn-success">S'inscrire</button>

      {{ form_end(form) }}

{% endblock %}
